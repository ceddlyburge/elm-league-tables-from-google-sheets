FROM cypress/base:16.18.1

COPY package.json ./
COPY package-lock.json ./

RUN npm install

COPY elm.json ./

COPY serve.json ./

ENV ELM_HOME=/.elm

COPY ./public ./public
COPY cypress.config.js ./
COPY ./cypress ./cypress
COPY ./src ./src
# COPY ./functions ./functions
# COPY ./build ./build

RUN npm run build:app

ENV CYPRESS_VIDEO=false

CMD ["npm", "run", "cypress:test-built"]
